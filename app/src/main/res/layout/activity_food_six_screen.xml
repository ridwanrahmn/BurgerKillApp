<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_item"
    tools:context=".FoodOneScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:paddingTop="25dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonback"
            android:maxWidth="50dp"
            android:maxHeight="50dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/buttonback"
            android:background="@color/bg_item">
        </ImageButton>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/food6_large"
            android:maxHeight="300dp"
            android:maxWidth="300dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frenchkill"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kentang goreng yang renyah dan gurih, tentunya dengan tekstur yang lembut di dalam dan kering di luar. Sensasi kriuk akan terasa saat menggigitnya. Camilan yang cocok dikonsumsi pas kamu udah capek beraktivitas!"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:alpha="0.6"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:justificationMode="inter_word">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:fontFamily="@font/montserratsemibold"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 20.000"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="20dp">
        </TextView>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_order"
            android:layout_width="127dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-36dp"
            android:text="Pesan sekarang"
            android:background="@drawable/shape_info"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="12sp"
            android:textAllCaps="false">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</RelativeLayout>